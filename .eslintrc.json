{
	"env": {
		"node": true,
		"commonjs": true,
		"es2021": true
	},
	"ignorePatterns": ["node_modules/"],
	"extends": ["eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": "off",
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"no-unused-vars": "off",
		"prefer-const": "off"
	}
}
